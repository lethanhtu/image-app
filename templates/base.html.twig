<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <link rel="stylesheet" href="{{ asset('build/css/app.css')}}"/>
        <title>
            {% block title %}Image gallery{% endblock %}
        </title>
    </head>

    <body>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="{{path('index')}}">{{'Gallery'|trans}}</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{path('upload')}}">{{'Upload'|trans}}</a>
                </li>
                {% if app.user %}
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#">{{'Hello'|trans}}
                            {{app.user.username}}</a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="{{path('logout')}}">{{'Logout'|trans}}</a>
                            <a class="dropdown-item" href="{{path('profile')}}">{{'Profile'|trans}}</a>
                        </div>
                    </li>
                {% else %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{path('login')}}">{{'Login'|trans}}</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{path('register')}}">{{'Register'|trans}}</a>
                    </li>
                {% endif %}
            </ul>
            <div class="languages">
                <a href="{{path(app.request.get('_route'), app.request.get('_route_params')|merge({'_locale': 'en'}))}}"><img src="{{asset('build/images/gb.png')}}"/></a>
                <a href="{{path(app.request.get('_route'), app.request.get('_route_params')|merge({'_locale': 'fr'}))}}"><img src="{{asset('build/images/fr.png')}}"/></a>
            </div>
        </nav>
        <div class="content">
            {% for message in app.flashes('notice') %}
                <div class="alert alert-success label" role="alert">
                    {{message | raw}}
                </div>
            {% endfor %}
            {% block body%}{% endblock %}
        </div>
        <script src="{{asset('build/js/app.js')}}"></script>
    </body>
</html>
