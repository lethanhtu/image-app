{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <table class="table">
                <tbody>
                    <tr>
                        <td>
                            {{'Username'|trans}}
                        </td>
                        <td>
                            {{username}}
                        </td>
                    </tr>
                    <tr>
                        <td>
                            {{'Fullname'|trans}}
                        </td>
                        <td>
                            {{fullName}}
                        </td>
                    </tr>
                    <tr>
                        <td>
                            {{'Email'|trans}}
                        </td>
                        <td>
                            {{email}}
                        </td>
                    </tr>
                    <tr>
                        <td>
                            {{'Join date'|trans}}
                        </td>
                        <td>
                            {{createdDate|date('Y-m-d')}}
                        </td>
                    </tr>
                    <tr>
                        <td>
                            {{'Role'|trans}}
                        </td>
                        <td>
                            {{role}}
                        </td>
                    </tr>
                    <tr>
                        <td>
                            {{'Total upload'|trans}}
                        </td>
                        <td>
                            {{totalUpload}}
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
