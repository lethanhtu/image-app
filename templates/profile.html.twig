{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <table class="table">
                <tbody>
                    <tr>
                        <td>
                            Username
                        </td>
                        <td>
                            {{username}}
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Fullname
                        </td>
                        <td>
                            {{fullName}}
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Email
                        </td>
                        <td>
                            {{email}}
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Join date
                        </td>
                        <td>
                            {{createdDate|date('Y-m-d')}}
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Role
                        </td>
                        <td>
                            {{role}}
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Total upload
                        </td>
                        <td>
                            {{totalUpload}}
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Total like received
                        </td>
                        <td>
                            {{totalLikeReceived}}
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
